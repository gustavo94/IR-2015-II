<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IrlActivity"
    android:orientation="vertical"
    android:id="@+id/list"
    android:background="@drawable/abc_rob"
    android:baselineAligned="false">



    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#128a8d"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="5dp"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></TableRow>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtDirec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Direccion ip..."
                android:layout_marginLeft="48dp"
                android:layout_marginTop="16dp" />

            <ToggleButton
                android:id="@+id/btnConectar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bconectar"
                android:layout_margin="16dp"
                android:textOff="Conectar"
                android:textOn="Desconectar" />


        </LinearLayout>

            <TextView
                android:id="@+id/estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En espera..."
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_margin="8dp" />

            <SeekBar
                android:id="@+id/sbmu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="180"
                android:progress="0"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/seektext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muñeca"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#4689C8"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    />



            <TextView
                android:id="@+id/seektext11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grados: 0°"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#4689C8"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_marginRight="16dp"
               />

            </LinearLayout>

            <SeekBar
                android:id="@+id/sbma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="180"
                android:progress="0"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/seektext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mano"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#4689C8"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    />

            <TextView
                android:id="@+id/seektext22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grados: 0°"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#4689C8"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_marginRight="16dp"
                />
            </LinearLayout>

            <SeekBar
                android:id="@+id/sbbr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="180"
                android:progress="0"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/seektext3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brazo"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#4689C8"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    />

            <TextView
                android:id="@+id/seektext33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grados: 0°"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#4689C8"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_marginRight="16dp"
                />
            </LinearLayout>

            <SeekBar
                android:id="@+id/sbco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="180"
                android:progress="0"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/seektext4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Codo"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#4689C8"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                />

            <TextView
                android:id="@+id/seektext44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grados: 0°"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#4689C8"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_marginRight="16dp"
                />
            </LinearLayout>

            <SeekBar
                android:id="@+id/sbho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="180"
                android:progress="0"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/seektext5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hombro"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#4689C8"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    />

            <TextView
                android:id="@+id/seektext55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grados: 0°"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#4689C8"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                />
            </LinearLayout>





        </LinearLayout>



    </ScrollView>

</LinearLayout>


